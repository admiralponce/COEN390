<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.juliachihata.co_pilot">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application

        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Co-Pilot"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".BluetoothSettingActivity"
            android:screenOrientation="portrait"></activity>

        <activity android:name=".BluetoothActivity"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".GestureActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".MissionActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".ActivitySplash"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".DifficultyActivity"
            android:parentActivityName=".AwarenessActivity"
            android:label="          Pre-Flight Settings"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AltcorrectionActivity"
            android:parentActivityName=".CalculationsActivity"
            android:label="  Altitude Correction Calculator"
            android:screenOrientation="portrait"/>

        <activity android:name="WeightAndBalance"
            android:parentActivityName=".CalculationsActivity"
            android:label=" Weight and Balance Calculator"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LogbookActivity"
            android:parentActivityName=".MainActivity"
            android:label="              Flight Logbook"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".DictionaryActivity"
            android:parentActivityName=".MainActivity"
            android:label="                   SKYbrary"
            android:windowSoftInputMode="stateHidden"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".AwarenessActivity"
            android:parentActivityName=".MainActivity"
            android:label="      Awareness Test Timer"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".CalculationsActivity"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".AlertReceiver" />
    </application>



</manifest>