<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/altcorrection_button"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_below="@+id/copilot_title"
            android:layout_alignStart="@+id/copilot_title"
            android:layout_alignLeft="@+id/copilot_title"
            android:layout_marginStart="70dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="33dp"
            android:background="@drawable/c_altitude"
            android:clickable="true"
            android:onClick="goToAltCorrection" />

        <Button
            android:id="@+id/weightbalancebutton"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_below="@+id/copilot_title"
            android:layout_alignStart="@+id/copilot_title"
            android:layout_alignLeft="@+id/copilot_title"
            android:layout_marginStart="70dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="87dp"
            android:background="@drawable/c_wb"
            android:clickable="true"
            android:onClick="goToWeightBalance" />

        <TextView
            android:id="@+id/copilot_title"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            android:text="Co-Pilot"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:textSize="80dp"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/calculations_button"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_below="@id/copilot_title"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="80dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/cal_icon" />

        <TextView
            android:id="@+id/calculations_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/calculations_button"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="75dp"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="10dp"
            android:text="Calculations"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:textSize="16dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/dictionary_button"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_below="@+id/calculations_button"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="81dp"
            android:layout_marginLeft="81dp"
            android:layout_marginTop="109dp"
            android:background="@drawable/dictionary_icon" />

        <TextView
            android:id="@+id/dictionary_text"
            android:layout_width="80dp"
            android:layout_height="24dp"
            android:layout_below="@+id/dictionary_button"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="87dp"
            android:layout_marginLeft="87dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="100dp"
            android:layout_marginRight="100dp"
            android:layout_marginBottom="82dp"
            android:layout_toStartOf="@+id/logbook_text"
            android:layout_toLeftOf="@+id/logbook_text"
            android:text="SKYbrary"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:textSize="16dp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/awareness_button"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_below="@id/copilot_title"
            android:layout_alignRight="@id/copilot_title"
            android:layout_marginTop="30dp"
            android:layout_marginRight="80dp"
            android:background="@drawable/awareness_icon" />

        <TextView
            android:id="@+id/awareness_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/awareness_button"
            android:layout_alignRight="@id/copilot_title"
            android:layout_marginTop="12dp"
            android:layout_marginRight="79dp"
            android:text="Awareness"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:textSize="16dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/logbook_button"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_below="@+id/awareness_button"
            android:layout_alignRight="@id/copilot_title"
            android:layout_marginTop="110dp"
            android:layout_marginRight="80dp"
            android:background="@drawable/logbook_icon"
            tools:ignore="UnknownId" />

        <TextView
            android:id="@+id/logbook_text"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_below="@+id/logbook_button"
            android:layout_alignRight="@id/copilot_title"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="88dp"
            android:layout_marginBottom="76dp"
            android:text="LogBook"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:textSize="16dp"
            android:textStyle="bold" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>